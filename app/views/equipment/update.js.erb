<% @equipment.attributes.each do |name, value| %>
  <% if Equipment.metrics_attributes.include?(name) %>
    $("#<%= name %>_status_equipment_<%= @equipment.id %>").html(
      "<%=
        j render partial: 'shared/metrics_icon',
          locals: {
          record: @equipment,
          name: name,
          value: value
        }
      %>");
  <% end %>
<% end %>
$("#equipment-properties").html("<%= j render 'properties' %>");
