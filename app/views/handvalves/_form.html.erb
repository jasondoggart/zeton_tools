<%= form_for @handvalve do |f| %>
  <% if @handvalve.errors.any? %>
    <div class="errors-dialogue">
      This couldn't be completed because there are <%= pluralize(@handvalve.errors.count, "error") %>.  Please correct these errors below, then resubmit your form.
      <ul>
        <% @handvalve.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="item-properties">
    <div class="item-header" id="tag">
      <div class="item-header-icon">
        <i class="fas fa-tag"></i>
      </div>
      <%=
        f.label :tag,
        'Tag',
        class: 'item-header-text'
      %>
    </div>
    <%=
      f.text_field :tag,
      class: 'form-input',
      placeholder: 'Enter tag',
      onfocus: "darkLabel('#tag')",
      onblur: "lightLabel('#tag')"
    %>
    <div class="item-header" id="spec">
      <div class="item-header-icon">
        <i class="fas fa-hashtag"></i>
      </div>
      <%=
        f.label :valve_code,
        'Valve Specification',
        class: 'item-header-text'
      %>
    </div>
    <%=
      f.text_field :valve_code,
      class: 'form-input',
      placeholder: 'Enter valve specification',
      onfocus: "darkLabel('#spec')",
      onblur: "lightLabel('#spec')"
    %>
    <div class="item-header" id="type">
      <div class="item-header-icon">
        <i class="far fa-dot-circle"></i>
      </div>
      <%=
        f.label :valve_type,
        'Valve Type',
        class: 'item-header-text'
      %>
    </div>
    <%=
      f.text_field :valve_type,
      class: 'form-input',
      placeholder: 'Enter valve type',
      onfocus: "darkLabel('#type')",
      onblur: "lightLabel('#type')"
    %>
    <div class="item-header" id="size">
      <div class="item-header-icon">
        <i class="fas fa-compress"></i>
      </div>
      <%=
        f.label :size,
        'Size',
        class: 'item-header-text'
      %>
    </div>
    <%=
      f.text_field :size,
      class: 'form-input',
      placeholder: 'Enter size',
      onfocus: "darkLabel('#size')",
      onblur: "lightLabel('#size')"
    %>
    <div class="item-header" id="installed_on">
      <div class="item-header-icon">
        <i class="fas fa-map-pin"></i>
      </div>
      <%=
        f.label :line_number,
        'Installed On',
        class: 'item-header-text'
      %>
    </div>
    <%=
      f.text_field :line_number,
      class: 'form-input',
      placeholder: 'Enter line installed on',
      onfocus: "darkLabel('#installed_on')",
      onblur: "lightLabel('#installed_on')"
    %>
    <div class="item-header" id="skid_number">
      <div class="item-header-icon">
        <i class="fas fa-bullseye"></i>
      </div>
      <%=
        f.label :zeton_skid_number,
        'Skid Number',
        class: 'item-header-text'
      %>
