    </div>
    <%=
      f.text_field :zeton_po,
      class: 'form-input',
      placeholder: 'Enter PO number',
      onfocus: "darkLabel('#zeton_po')",
      onblur: "lightLabel('#zeton_po')"
    %>

    <%= f.submit @handvalve.new_record? ? 'Add Handvalve' : 'Update Handvalve', class: 'form-submit-button' %>
  </div>
<% end %>
