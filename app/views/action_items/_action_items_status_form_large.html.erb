<%= form_for action_item, remote: true do |f| %>
  <%= f.hidden_field :status, value: rfi_status_update(action_item.status) %>
  <%= f.button "<i class='far fa-check-circle'></i> #{rfi_status_button(action_item.status)}".html_safe, class: 'rfi-status rfi-status-' + rfi_status_button(action_item.status).downcase %>
<% end %>
